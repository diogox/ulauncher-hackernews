{
    "manifest_version": "1",
    "api_version": "1",
    "name": "HackerNews",
    "description": "Read the top stories on HackerNews",
    "developer_name": "Diogo Xavier",
    "icon": "images/hackernews.png",
    "options": {
        "query_debounce": 0.1
    },
    "preferences": [
        {
            "id": "keyword",
            "type": "keyword",
            "name": "HackerNews",
            "default_value": "hn"
        },
        {
            "id": "open_mode",
            "type": "select",
            "name": "Open Article's",
            "options": ["Comment Section", "URL"],
            "default_value": "Comment Section"
        },
        {
            "id": "cache_increment",
            "type": "input",
            "name": "Pages to Cache in Advance",
            "description": "Amount of pages to cache ahead each time a request needs to be made to the API. It includes the current page you load.",
            "default_value": "4"
        },
        {
            "id": "cache_refresh_rate",
            "type": "input",
            "name": "Cache Refresh Rate",
            "description": "Limit amount of time the caches is to be kept useable. (in minutes)",
            "default_value": "10"
        },
        {
            "id": "item_amount",
            "type": "input",
            "name": "Items to Show",
            "default_value": "5"
        }
    ]
}
